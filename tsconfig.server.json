{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "CommonJS", // Ensure compatibility with Node.js
    "moduleResolution": "node" // Use Node.js module resolution
  },
  "include": ["server"]
}
